---
import { storyblokEditable } from '@storyblok/astro';
const { blok } = Astro.props;
---

<form action="" {...storyblokEditable(blok)} class="article__container">
  <h3 class="header__3 contact__header">{blok.title}</h3>
  <p class="contact__text">{blok.text}</p>
  <div class="input__container">
    {
      blok.input.map((data) => (
        <>
          <label class="contact__label" for={data.name}>
            {data.label}
          </label>
          <input
            class="contact__input"
            type={data.type}
            name={data.name}
            placeholder={data.placeholder}
          />
        </>
      ))
    }
  </div>
  <button class="contact__submit" type="submit">Submit</button>
</form>
<style>
  .article__container {
    position: relative;
    background-color: black;
    color: white;
    flex: 1;
    padding: var(--sm);
  }
  .input__container {
    display: flex;
    flex-direction: column;
    gap: var(--xx-sm);
  }
  .contact__text {
    margin-bottom: var(--sm);
  }
  .contact__label {
    display: none;
  }
  .contact__input {
    width: 100%;
    padding: 2px var(--xx-sm);
    border: none;
  }
  .contact__input:last-child {
    width: 80%;
  }
  .contact__submit {
    position: absolute;
    width: calc((100% - 33px) / 5);
    bottom: var(--sm);
    right: var(--sm);
    border: none;
    outline: none;
    height: 30px;
    background-color: grey;
    color: white;
    text-transform: uppercase;
  }
</style>
