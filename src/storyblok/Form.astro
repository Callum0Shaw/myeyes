---
import { storyblokEditable } from '@storyblok/astro';
const { blok } = Astro.props;
---

<form action="" {...storyblokEditable(blok)} class="article__container">
  <h3 class="header__3 contact__header">{blok.title}</h3>
  <p class="contact__text paragraph__container">{blok.text}</p>
  <div class="input__container">
    <input class="contact__input" type="text" name="firstName" id="" placeholder="First Name" />
    <input class="contact__input" type="text" name="lastName" id="" placeholder="Last Name" />
    <input class="contact__input" type="email" name="email" id="" placeholder="E-mail" />
  </div>
  <button class="contact__submit" type="submit">Submit</button>
</form>
<style>
  .article__container {
    position: relative;
    background-color: var(--black);
    color: white;
    flex: 1;
    padding: var(--sm);
  }
  .input__container {
    display: flex;
    flex-direction: column;
    gap: var(--xx-sm);
  }
  .contact__text {
    margin-bottom: var(--sm);
  }
  .contact__label {
    display: none;
  }
  .contact__input {
    width: 100%;
    padding: 2px var(--xx-sm);
    border: none;
    outline: none;
  }
  .contact__input:focus {
    box-shadow: 0px 0px 2px 2px rgba(56, 128, 128, 0.75);
    -webkit-box-shadow: 0px 0px 2px 2px rgba(56, 128, 128, 0.75);
    -moz-box-shadow: 0px 0px 2px 2px rgba(56, 128, 128, 0.75);
  }
  .contact__input:last-child {
    width: 80%;
  }
  .contact__submit {
    position: absolute;
    width: calc((100% - 33px) / 5);
    bottom: var(--sm);
    right: var(--sm);
    border: none;
    outline: none;
    height: 30px;
    background-color: var(--grey);
    color: white;
    text-transform: uppercase;
    transition: all 0.2s ease-in-out;
    cursor: pointer;
  }
  .contact__submit:hover {
    background-color: var(--light-grey);
  }
</style>
<script is:inline>
  const submitButton = document.querySelector('contact__submit');
  submitButton.addEventListener('click', (e) => {
    handleSubscribe(e);
  });

  function handleSubscribe(e) {
    e.preventDefault();
    console.log('hello');
  }
</script>
