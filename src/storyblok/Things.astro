---
import { storyblokEditable, renderRichText } from '@storyblok/astro';
import { Picture } from '@astrojs/image/components';
import Dots from '../components/Dots.astro';
const { blok } = Astro.props;

const info = renderRichText(blok.info);
---

<article {...storyblokEditable(blok)} class="things__container">
  <div class="picture__container">
    <Picture src={blok.image.filename} widths={[340]} sizes="340px" aspectRatio="9:16" alt="alt" />
  </div>
  <div class="text__container">
    <Fragment set:html={info} />
    <p class="things__description">{blok.description}</p>
    <Dots />
  </div>
</article>
<style>
  .things__container {
    flex: 1;
    display: flex;
    flex-direction: row;
    background-color: black;
    color: white;
    max-height: 460px;
  }
  .picture__container {
    aspect-ratio: 9 / 16;
    object-fit: cover;
    min-width: 150px;
    height: 100%;
  }
  .text__container {
    padding: var(--sm);
  }
  .things__description {
    margin-top: var(--sm);
  }
</style>
